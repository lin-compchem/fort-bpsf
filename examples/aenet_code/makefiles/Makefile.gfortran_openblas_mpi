SUFFIX   = gfortran_openblas_mpi

OMPI_FC := gfortran
FC       = mpif90 -c
LD       = mpif90
DEBUG    =
FCFLAGS  = -DPARALLEL -O3 -pedantic -fexternal-blas -fblas-matmul-limit=30 $(DEBUG)
LDFLAGS  = -static-libgfortran $(DEBUG)
NUMLIB   = -lopenblas

CC       = gcc -c
CCFLAGS  =

# linker for C-interoperable library (gcc & gfortran)
LIBLD    = gcc
LIBFLAGS = -shared
LIBLIB   = -lgfortran

AR       = ar
ARFLAGS  = -crusv

include ./Makefile.inc
